# Firebase App Configuration - Required for basic functionality
NEXT_PUBLIC_FIREBASE_API_KEY=YOUR_API_KEY
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=YOUR_AUTH_DOMAIN
NEXT_PUBLIC_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=YOUR_STORAGE_BUCKET
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=YOUR_MESSAGING_SENDER_ID
NEXT_PUBLIC_FIREBASE_APP_ID=YOUR_APP_ID
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=YOUR_MEASUREMENT_ID # Optional

# Firebase Admin SDK Configuration - Required for admin actions (like creating users)
# Option 1 (Recommended for Deployment): Paste the entire content of your service account JSON key here. Ensure it's a single line (remove newlines).
# FIREBASE_SERVICE_ACCOUNT_KEY={"type": "service_account", ...}
# Option 2 (Local Development): Leave FIREBASE_SERVICE_ACCOUNT_KEY empty or remove it, and place the downloaded serviceAccountKey.json file in the project root.
FIREBASE_SERVICE_ACCOUNT_KEY=

# Genkit / Google AI Configuration - Required for GenAI features
GOOGLE_GENAI_API_KEY=YOUR_GOOGLE_GENAI_API_KEY

# Admin Identification (Alternative to Custom Claims)
# Uncomment and set this to the UID of the user you want to be admin *after* creating them.
# This method is checked first in the useAuth hook.
# NEXT_PUBLIC_ADMIN_UID=ADMIN_USER_FIREBASE_UID

# Firebase Dynamic Links (Optional - If using dynamic links feature)
# Store your Firebase Web API Key used for Dynamic Links here.
# The base URL is typically https://firebasedynamiclinks.googleapis.com/v1/shortLinks
NEXT_PUBLIC_FIREBASE_DYNAMIC_LINKS_API_KEY=YOUR_DYNAMIC_LINKS_WEB_API_KEY
